+Server name: ' . $server->name . '
+Server ID: ' . $server->uuid . '
+Server node: ' . $server->node->name . '(' . $server->node_id . ')
+Server state: ' . Arr::get($serverDetails, 'state', 'stopped') . '
+Server CPU: ' . Arr::get($serverDetails, 'utilization.cpu_absolute', 0) . '%

+
+Object.keys(Icons)
+    .filter(it => it !== 'key' && it !== 'prefix')
+    // @ts-ignore
+    .forEach(it => library.add(Icons[it]))
+
+interface Props {
+    position: 'component' | 'commandLine'
+}
+
+interface MCPasteData {
+    tokenValid: boolean,
